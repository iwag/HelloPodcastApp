<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="wrap_content"
android:layout_width="wrap_content">


    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/photo_image_view1"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:color/black"
        android:layout_below="@+id/icon_image_view"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/photo_image_view2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:color/black"
        android:layout_alignTop="@+id/photo_image_view1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/name_label_text_view"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/date_label_text_view" />

    <TextView
        android:id="@+id/date_label_text_view"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_image_view" />

    <TextView
        android:id="@+id/news_body_text_view"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photo_image_view1"
        android:text="TextView" />

</RelativeLayout>